<h2>Welcome @ViewBag.currentUser.FirstName!</h2>

<h3>Manage Users</h3>
<table class="table table-responsive">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Created At</th>
            <th>User Level</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in ViewBag.AllUsers)
        {
            <tr>
                <td>@user.UserId</td>
                <td><a href="/users/show/@user.UserId">@user.FirstName @user.LastName</a></td>
                <td>@user.Email</td>
                <td>@user.Created_At</td>
                <td>@user.UserLevel</td>
            </tr>
        }
    </tbody>
</table>
<hr>
<p><a href="/users/show/@ViewBag.currentUser.UserId">Profile</a> | <a href="/logout">Log off</a></p>